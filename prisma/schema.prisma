generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  ADMIN
  GERENTE
  VENDEDOR
}

model User {
  id        String     @id @default(cuid())
  name      String
  email     String     @unique
  password  String
  role      Roles      @default(VENDEDOR)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  vendas    Venda[]
  servicos  Servico[]
}

model Servico {
  id               String   @id @default(cuid())
  nome             String
  CPF              String
  telefone         String
  itensRecebidos   String
  descricaoServico String
  dataEntrega      String
  totalFinal       String
  formaPagamento   String
  statusPagamento  String
  statusServico    String
  vendedorId       String
  vendedor         User     @relation(fields: [vendedorId], references: [id])
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Venda {
  id              String   @id @default(cuid())
  nome            String
  CPF             String
  telefone        String
  descricaoVenda  String
  dataEntrega     String
  totalFinal      String
  formaPagamento  String
  statusPagamento String
  statusVenda     String
  vendedorId      String
  vendedor        User     @relation(fields: [vendedorId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
